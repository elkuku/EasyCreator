<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
  <name>EasyCreator</name>
  <creationDate>26-Sep-2017</creationDate>
  <author>Nikolai Plath</author>
  <authorEmail>der.el.kuku@gmail.com</authorEmail>
  <authorUrl>https://github.com/elkuku</authorUrl>
  <copyright>Copyright (C) Nikolai Plath. All rights reserved.</copyright>
  <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
  <version>0.0.27-dev</version>
  <description>EasyCreator helps creating Extensions for Joomla!</description>
  <scriptfile>install/script.php</scriptfile>
  <updateservers>
    <server name="EasyCreator update server" type="extension" priority="1">https://easycreator.github.io/updates.xml</server>
  </updateservers>
  <files folder="site">
    <folder>g11n</folder>
    <folder>helpers</folder>
    <folder>views</folder>
    <filename>controller.php</filename>
    <filename>easycreator.php</filename>
  </files>
  <administration>
    <menu link="option=com_easycreator">EasyCreator</menu>
    <files folder="admin">
      <folder>cli</folder>
      <folder>controllers</folder>
      <folder>data</folder>
      <folder>g11n</folder>
      <folder>helpers</folder>
      <folder>includes</folder>
      <folder>install</folder>
      <folder>models</folder>
      <folder>templates</folder>
      <folder>views</folder>
      <filename>controller.php</filename>
      <filename>easycreator.php</filename>
    </files>
  </administration>
  <media destination="com_easycreator" folder="media">
    <folder>admin</folder>
    <folder>site</folder>
  </media>
</extension>
