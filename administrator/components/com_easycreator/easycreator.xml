<extension type="component" version="1.5" method="upgrade">
  <name>EasyCreator</name>
  <creationDate>24-Apr-2012</creationDate>
  <author>Nikolai Plath</author>
  <authorEmail>der.el.kuku@gmail.com</authorEmail>
  <authorUrl>https://github.com/elkuku</authorUrl>
  <copyright>Copyright (C) Nikolai Plath. All rights reserved.</copyright>
  <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
  <version>0.0.18</version>
  <description>EasyCreator helps creating Extensions for Joomla!</description>
  <installfile>install/install.easycreator.php</installfile>
  <uninstallfile />
  <install>
    <sql />
  </install>
  <uninstall>
    <sql />
  </uninstall>
  <scriptfile>install/script.php</scriptfile>
  <files folder="site">
    <folder>g11n</folder>
    <folder>helpers</folder>
    <folder>views</folder>
    <filename>controller.php</filename>
    <filename>easycreator.php</filename>
  </files>
  <administration>
    <menu img="../media/com_easycreator/admin/images/ico/icon-16-easycreator.png" link="index.php?option=com_easycreator">EasyCreator
        </menu>
    <files folder="admin">
      <folder>cli</folder>
      <folder>controllers</folder>
      <folder>data</folder>
      <folder>g11n</folder>
      <folder>helpers</folder>
      <folder>includes</folder>
      <folder>install</folder>
      <folder>models</folder>
      <folder>templates</folder>
      <folder>tests</folder>
      <folder>views</folder>
      <filename>CHANGELOG.php</filename>
      <filename>controller.php</filename>
      <filename>easycreator.php</filename>
      <filename>easycreator.xml</filename>
      <filename>version.txt</filename>
    </files>
  </administration>
  <media destination="com_easycreator" folder="media">
    <folder>admin</folder>
    <folder>site</folder>
  </media>
  <params />
</extension>